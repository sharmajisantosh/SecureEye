<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relatLayout242"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view1"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        card_view:cardCornerRadius="@dimen/_10sdp"
        card_view:cardElevation="@dimen/_3sdp"
        android:layout_margin="@dimen/_4sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userProfilePicDuty"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_margin="@dimen/_5sdp"
                card_view:civ_border_width="@dimen/_1sdp"
                card_view:civ_border_color="@color/bg_main"
                android:src="@drawable/ic_launcher_background"/>


            <TextView
                android:id="@+id/tvDutyUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                style="@style/textViewStyleDark"
                android:layout_toRightOf="@+id/userProfilePicDuty"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:textSize="@dimen/_15sdp"/>

            <TextView
                android:id="@+id/tvDutyUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User mail id"
                style="@style/textViewStyleDark"
                android:layout_toRightOf="@+id/userProfilePicDuty"
                android:layout_below="@+id/tvDutyUserName"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:textSize="@dimen/_10sdp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>